@model mfc.web.Models.FileStatusModel

@{
    var for_edit = Model.Id > 0;
    
    if (for_edit) {
        ViewBag.Title = "Редактирование статуса";
    }
    else {
        ViewBag.Title = "Добавление статуса";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section workmenu {
    @Html.Partial("_AdminMenu", 5)
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(for_edit ? "Edit" : "Create", "FileStatus", FormMethod.Post, new { @class = "form" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ActionTypeModel</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Caption)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Caption)
            @Html.ValidationMessageFor(model => model.Caption)
        </div>

        <p>
            <input type="submit" value="Сохранить" class="btn btn-lg btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к списку", "List")
</div>
