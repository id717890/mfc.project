@model IEnumerable<mfc.web.Models.OrganizationModel>

@{
    ViewBag.Title = "Справочник ОГВ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section workmenu {
    @Html.Partial("_AdminMenu", 2)
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Новый", "Create")
</p>
<table class="tableizer-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Caption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullCaption)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeCaption)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Caption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullCaption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeCaption)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
