@model mfc.web.Models.AcceptForControlModel

@section workmenu {
    @Html.Partial("_WorkMenu", mfc.web.Constants.WorkMenuItems.Files)
}


@{
    ViewBag.Title = "Отправка на проверку";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@ViewBag.Title</h2>
<p style="color:green;font-weight:bold">Приняты на контроль</p>
<table class="table">
    <tr>
        <th>Дата</th>
        <th>Номер</th>
        <th>Услуга</th>
        <th>ОГВ</th>
        <th>Эксперт</th>
        <th>Контролёр</th>
        <th>Статус</th>
    </tr>

    @foreach (var file in Model.AcceptedFiles) {

              <tr>
                <td>
                    @file.Date.ToString("dd.MM.yyyy")
                </td>
                <td>
                    @Html.DisplayFor(m => file.Caption)
                </td>
                <td>
                    @Html.DisplayFor(m => file.Action.Service.Caption)
                </td>
                <td>
                    @Html.DisplayFor(m => file.Ogv.Caption)
                </td>
                <td>
                    @Html.DisplayFor(m => file.Expert.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => file.Controller.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => file.CurrentStatus.Caption)
                </td>
            </tr>
        }

    </table>

<p style="color:red;font-weight:bold">Передача на контроль отклонена</p>
<table class="table">
    <tr>
        <th>Дата</th>
        <th>Номер</th>
        <th>Услуга</th>
        <th>ОГВ</th>
        <th>Эксперт</th>
        <th>Контролёр</th>
        <th>Статус</th>
    </tr>

    @foreach (var file in Model.RejectedFiles) {

        <tr>
            <td>
                @file.Date.ToString("dd.MM.yyyy")
            </td>
            <td>
                @Html.DisplayFor(m => file.Caption)
            </td>
            <td>
                @Html.DisplayFor(m => file.Action.Service.Caption)
            </td>
            <td>
                @Html.DisplayFor(m => file.Ogv.Caption)
            </td>
            <td>
                @Html.DisplayFor(m => file.Expert.Name)
            </td>
            <td>
                @Html.DisplayFor(m => file.Controller.Name)
            </td>
            <td>
                @Html.DisplayFor(m => file.CurrentStatus.Caption)
            </td>
        </tr>
    }

</table>