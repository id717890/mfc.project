@model mfc.web.Models.PasswordModel

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form" })) {
    @Html.AntiForgeryToken()
    <div class="alert alert-danger">
        <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        @Html.ValidationSummary(false, "Проверка данных: ")
    </div>

    @Html.HiddenFor(model => model.UserId)

    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword)
        @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control", placeholder = "Введите новый пароль"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control", placeholder = "Введите подтверждение пароля" })
    </div>

    <hr>

    <input type="submit" value="Установить пароль" class="btn btn-default pull-right" />
}
