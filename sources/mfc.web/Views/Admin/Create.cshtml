@model mfc.web.Models.AccountInfo

@{
    ViewBag.Title = "Добавление  нового пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section workmenu {
    @Html.Partial("_AdminMenu", 0)
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { @class = "form" })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>AccountInfo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Добавить" class="btn btn-lg btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Вернуться к списку пользователей", "List")
</div>